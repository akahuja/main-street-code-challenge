<div class="container py-5">
  <h3 class="mb-3 border-bottom pb-3">Company</h3>
  <div class="d-flex align-items-center justify-content-between mb-3">
    <%= link_to 'Back', companies_path, class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Edit', edit_company_path, class: 'btn btn-primary btn-sm' %>
  </div>
  <div id="show-header" style="background-color: <%= @company.brand_color || 'green' %>">
    <div class="container p-4 text-white">
      <h1><%= @company.name %></h1>
      <% if @company.city || @company.state %>
        <h3><mark><%= "#{@company.city}, #{@company.state}" %></mark></h3>
      <% end %>
    </div>
  </div>

  <div class="bg-light">
    <div class="row px-3 py-5">
      <div class="col-12 col-lg-8">
        <%= @company.description %>
      </div>
      <div class="col-12 col-lg-4">
        <h4>Services</h4>
        <% @company.services.reject(&:blank?).each do |service| %>
          <p><%= service %></p>
        <% end %>
        <hr>
        <h4>Contact</h4>
        <div class="form-group" data-controller="clipboard">
          <p><%= @company.phone %><br>
          <input type="hidden" value="<%= @company.phone %>" data-target="clipboard.source"></input>
          <a data-action="clipboard#copy" class="clipboard-button pointer text-decoration-none text-dark"> copy</a>
          <a data-target="clipboard.notice" class="clipboard-button pointer d-none text-decoration-none text-dark" class="d-none"> copied</a> 
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="text-white text-center py-4" style="background-color: <%= @company.brand_color.presence || '#28a745' %>">
    <p class="lead m-0"><%= @company.phone %> â€” <%= @company.email %></p>
  </div>
</div>